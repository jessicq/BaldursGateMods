/** Baeloth **/
IF
  InMyArea(Player1)
  InParty("Baeloth")
  InParty("QI#TEL")
  CombatCounter(0)
  !See([ENEMY])
  Global("QI#TelziBaeloth","GLOBAL",1)
  RealGlobalTimerExpired("QI#TelziBaelothTalk","GLOBAL")
  !GlobalTimerNotExpired("BD_BANTER_DELAY","MYAREA")
  !RealGlobalTimerNotExpired("QI#_BANTER_DELAY","GLOBAL")
  !Global("QI#TelziBaeloth1","MYAREA",-1)
  Switch("QI#TelziBaeloth1","MYAREA")
THEN 
  RESPONSE #0
	  DisplayStringHead("BAELOTH",~Ah! You would make a wonderful addition in my warring tournaments!~)
	  SetGlobalTimer("BD_BANTER_DELAY","MYAREA",4)
	  SetGlobal("QI#TelziBaeloth1","MYAREA",10)
  RESPONSE #10
  	  DisplayStringHead("QI#TEL",~Tournaments? You mean fights. I have been in too many to count.~)
	  SetGlobalTimer("BD_BANTER_DELAY","MYAREA",3)
	  SetGlobal("QI#TelziBaeloth1","MYAREA",20)
  RESPONSE #20
    	  DisplayStringHead("BAELOTH",~All the better! More experienced competitors means more flamboyant challenges and more challenges means more money!~)
	  SetGlobalTimer("BD_BANTER_DELAY","MYAREA",5)
	  SetGlobal("QI#TelziBaeloth1","MYAREA",20)
  RESPONSE #30
    	  DisplayStringHead("QI#TEL",~I do not like you. Stay away from me and I will not be forced to break your neck.~)
	  SetGlobalTimer("BD_BANTER_DELAY","MYAREA",4)
	  SetGlobal("QI#TelziBaeloth1","MYAREA",20)
END

