    	  DisplayStringHead("QI#TEL",~Really?~)
	  SetGlobalTimer("BD_BANTER_DELAY","MYAREA",3)
	  SetGlobal("QI#TelziCorwin1","MYAREA",20)
  RESPONSE #60
    	  DisplayStringHead("CORWIN",~No.~)
	  SetGlobalTimer("BD_BANTER_DELAY","MYAREA",2)
	  SetGlobal("QI#TelziCorwin1","MYAREA",20)
END

